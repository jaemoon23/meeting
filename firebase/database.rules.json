{
  "rules": {
    "meetings": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "presence": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "templates": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "userTemplates": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "discordMapping": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "adminConfig": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.email == '990914s@gmail.com'"
    },
    "allowedEmails": {
      ".read": true,
      ".write": "auth != null && auth.token.email == '990914s@gmail.com'"
    },
    "events": {
      "shared": {
        ".read": "auth != null",
        ".write": "auth != null"
      },
      "personal": {
        "$uid": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    "projects": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "milestones": {
      "$projectId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "tasks": {
      "$milestoneId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "categories": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "comments": {
      "$meetingId": {
        ".read": "auth != null",
        "$commentId": {
          ".write": "auth != null && (!data.exists() || data.child('authorUid').val() === auth.uid)"
        }
      }
    }
  }
}
